<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#51abcb" />
            <size android:width="120dp" android:height="120dp" />

            <stroke
                android:width="2dp"
                android:color="@color/black" >
            </stroke>

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"    >
            </padding>

            <corners
                android:radius="11dp"   >

            </corners>
        </shape>

    </item>


</selector>