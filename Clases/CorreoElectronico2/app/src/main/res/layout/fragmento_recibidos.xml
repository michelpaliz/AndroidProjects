<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="352dp"
            android:layout_height="124dp">

            <TextView
                android:id="@+id/tvNombreRecibido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:text="nombre"
                app:layout_constraintStart_toEndOf="@+id/imageRecibido"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTextoRecibido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="texto"
                app:layout_constraintStart_toEndOf="@+id/imageRecibido"
                app:layout_constraintTop_toBottomOf="@+id/tvAsuntoRecibido" />

            <TextView
                android:id="@+id/tvFechaRecibido"
                android:layout_width="87dp"
                android:layout_height="47dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="44dp"
                android:gravity="center|center_horizontal"
                android:text="Fecha"
                android:textColor="#00BCD4"
                app:layout_constraintStart_toEndOf="@+id/tvAsuntoRecibido"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvAsuntoRecibido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:text="asunto"
                app:layout_constraintStart_toEndOf="@+id/imageRecibido"
                app:layout_constraintTop_toBottomOf="@+id/tvNombreRecibido" />

            <ImageView
                android:id="@+id/imageRecibido"
                android:layout_width="66dp"
                android:layout_height="91dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/c0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
