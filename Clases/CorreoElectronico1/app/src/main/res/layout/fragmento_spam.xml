<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="355dp"
            android:layout_height="132dp">

            <TextView
                android:id="@+id/tvTextoSpam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="texto"
                app:layout_constraintStart_toEndOf="@+id/imageSpam"
                app:layout_constraintTop_toBottomOf="@+id/tvAsuntoSpam" />

            <TextView
                android:id="@+id/tvAsuntoSpam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="8dp"
                android:text="asunto"
                app:layout_constraintStart_toEndOf="@+id/imageSpam"
                app:layout_constraintTop_toBottomOf="@+id/tvNombreSpam" />

            <ImageView
                android:id="@+id/imageSpam"
                android:layout_width="66dp"
                android:layout_height="91dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/c0" />

            <TextView
                android:id="@+id/tvNombreSpam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="nombre"
                app:layout_constraintStart_toEndOf="@+id/imageSpam"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvFechaSpam"
                android:layout_width="79dp"
                android:layout_height="49dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="Fecha"
                app:layout_constraintStart_toEndOf="@+id/tvAsuntoSpam"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
